@model PFL.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<!-- Advanced login -->
@using(Html.BeginForm())
{
    <div class="panel panel-body login-form">
        <div class="text-center">
            <div class="icon-object border-warning-400 text-warning-400"><i class="icon-people"></i></div>
            <h5 class="content-group-lg">Hesaba daxil ol <small class="display-block">İstifadəçi adı və şifrəni daxil edin</small></h5>
        </div>
        @Html.AntiForgeryToken()


        <div class="form-group has-feedback has-feedback-left">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "İstifadəçi adı" })
            <div class="form-control-feedback">
                <i class="icon-user text-muted"></i>
            </div>
        </div>

        <div class="form-group has-feedback has-feedback-left">
            @Html.PasswordFor(model=>model.Password, new { @class= "form-control", placeholder = "Şifrə" })
            <div class="form-control-feedback">
                <i class="icon-lock2 text-muted"></i>
            </div>
        </div>

        @*<div class="form-group login-options">
            <div class="row">
                <div class="col-sm-6">
                    <label class="checkbox-inline">
                        <input type="checkbox" class="styled" checked="checked">
                        Yadda saxla
                    </label>
                </div>

                <div class="col-sm-6 text-right">
                    <a href="login_password_recover.html">Şifrəni unutmusuz?</a>
                </div>
            </div>
        </div>*@

        <div class="form-group">
            <button type="submit" class="btn bg-blue btn-block">Daxil ol <i class="icon-circle-right2 position-right"></i></button>
        </div>

    </div>
}
<!-- /advanced login -->
